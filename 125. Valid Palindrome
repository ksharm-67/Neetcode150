class Solution {
public:
    bool isPalindrome(string s) {
        int i = 0;
        int j = s.size() - 1;

        if(s.empty()) return true;

        while(i < j){
            if(isalpha(s[i]) || isdigit(s[i])){    
                if(tolower(s[i]) != tolower(s[j])){
                    //cout << s[i] << " " << s[j];
                    return false;
                }
            i++;
            j--;
            }
        }
        
        return true;
    }
};