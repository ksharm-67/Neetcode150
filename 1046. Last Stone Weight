class Solution:
    def lastStoneWeight(self, stones: List[int]) -> int:

        if len(stones) == 1:
            return stones[0]
        
        stones = [-i for i in stones]
        heapq.heapify(stones)
        heap = stones

        while len(heap) >= 2:
            x = heapq.heappop(heap)
            y = heapq.heappop(heap)

            if x == y:
                continue
            else:
                heapq.heappush(heap, x - y)

        if not heap:
            return 0
        
        else:
            return -heap[0]
            
        
        
