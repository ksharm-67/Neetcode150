class Solution:
    def lastStoneWeight(self, stones: List[int]) -> int:
        
        stones.sort()
        #print(stones)

        i = len(stones) - 1
        while len(stones) > 1:
            if stones[i] == stones[i - 1]:
                x = stones.pop()
                y = stones.pop()
                #print(f"{x} and {y} are equal, popping both.")
            else:
                x = stones.pop()
                y = stones.pop()
                stones.append(x - y)
                #print(f"{x} != {y}, new stone of weight {x - y}")
            i = len(stones) - 1
            stones.sort()
            #print(stones)

        if not stones:
            return 0
        return stones[0]
