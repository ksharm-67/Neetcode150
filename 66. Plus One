class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {

        if(digits.size() == 1 && digits[0] < 9) return {digits[0] += 1};

        for(int i = digits.size() - 1; i >= 0; i--){
            if(digits[i] + 1 < 10) {
                //cout << digits[i] << " ";
                digits[i] += 1;
                break;
            }
            else digits[i] = 0;
        }
        if(digits[0] == 0) digits.insert(digits.begin(), 1);

        return digits;
    }
};