class Solution {
public:
    double myPow(double x, int n) {
        int ans = 1;

        if(n > 0){
            for(int i = 0; i < n; i++){
                ans = ans*x;
            }
            return ans;
        }
        if(n < 0){
            n = 0 - n;
            for(int i = 0; i < n; i++){
                ans = (ans*x);
            }
            return 1/ans;
        }
        return 1;
    }
};