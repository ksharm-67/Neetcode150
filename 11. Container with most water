class Solution:
    def maxArea(self, height: List[int]) -> int:
        
        maxWater = 0
        low, high = 0, len(height) - 1
        
        water = 0
        while low < high:
            water = (high - low) * min(height[high], height[low])
            maxWater = max(maxWater, water)
            
            if height[low] < height[high]:
                low += 1
            else:
                high -= 1
        
        return maxWater
