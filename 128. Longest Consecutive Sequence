class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        
        longest = 0
        freq = {}

        for i in range(len(nums)):
            freq[nums[i]] = False

        for j in range(len(nums)):
            if nums[j] - 1 not in freq:
                currLen = 1
                freq[nums[j]] = True

                nextNum = nums[j] + 1
                while nextNum in freq and freq[nextNum] == False:
                    currLen += 1
                    freq[nextNum] = True
                    nextNum += 1

                longest = max(longest, currLen)
        
        return longest
